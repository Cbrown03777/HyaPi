{
	"compilerOptions": {
		"target": "ES2020",
		"module": "CommonJS",
		"moduleResolution": "Node",
		"esModuleInterop": true,
		"strict": true,
		"rootDir": "src",
		"outDir": "dist/src",
		"declaration": true,
		"declarationDir": "dist/types",
		"skipLibCheck": true,
		"types": ["node"]
	},
	"include": ["src"],
	"exclude": ["__tests__"]
}
