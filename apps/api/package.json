{
  "name": "@hyapi/api",
  "version": "0.0.1",
  "description": "HyaPi API",
  "private": true,
  "type": "commonjs",
  "packageManager": "pnpm@10.15.0",
  "engines": {
    "node": "20.x"
  },
  "scripts": {
    "//": "----- Local dev -----",
    "predev": "pnpm -w -r --filter @hyapi/venues --filter @hyapi/prices build",
    "dev": "ts-node-dev --respawn --transpile-only src/server.ts",
    "//:prod": "----- Production build/run (used by Render) -----",
    "build": "pnpm -w -r --filter @hyapi/venues --filter @hyapi/prices build && tsc -p tsconfig.json",
    "start": "node dist/server.js",
    "//:aux": "----- Tooling -----",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "clean": "rimraf dist || true",
    "//:db": "----- DB utilities -----",
    "db:migrate:nav": "psql $DATABASE_URL -f ../../infra/db/0022_nav_history.sql",
    "db:inspect": "tsx scripts/inspect-schema.ts",
  "db:debug:portfolio": "psql \"$DATABASE_URL\" -f scripts/debug-portfolio.sql",
  "db:schema:print": "psql \"$DATABASE_URL\" -f scripts/print-schema.sql",
    "db:backfill:nav": "tsx scripts/backfill-nav-history.ts",
    "//:smoke": "----- Smoke tests -----",
    "smoke:proof": "tsx scripts/smoke-proof.ts",
    "test": "echo \"No tests yet\" && exit 0"
  },
  "dependencies": {
    "@hyapi/alloc": "workspace:*",
    "@hyapi/prices": "workspace:*",
    "@hyapi/venues": "workspace:*",
    "axios": "^1.7.7",
    "cors": "^2.8.5",
    "dotenv": "^17.2.1",
    "express": "^5.1.0",
    "helmet": "^8.1.0",
    "morgan": "^1.10.1",
    "pg": "^8.16.3",
    "stellar-sdk": "^12.1.1",
    "zod": "^4.0.17"
  },
  "devDependencies": {
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/morgan": "^1.9.10",
    "@types/node": "^24.3.0",
    "@types/pg": "^8.15.5",
    "rimraf": "^5.0.10",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.9.2"
  }
}
